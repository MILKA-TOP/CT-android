<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainTextStyle">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/tex_gyre_adventor_regular</item>
    </style>

    <style name="MainTextStyle.BigPicture">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/customborder</item>
    </style>

    <style name="MainTextStyle.BigPicture.BigLoad">
        <item name="android:textSize">48sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="MainTextStyle.Bold">
        <item name="fontFamily">@font/tex_gyre_adventor_bold</item>
        <item name="android:textSize">28sp</item>

    </style>

    <style name="Theme.AppIMAGESHW4.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>