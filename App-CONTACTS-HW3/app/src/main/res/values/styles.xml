<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.AppCONTACTSHW3.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BoldFont">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/tex_gyre_adventor_bold</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
    </style>

    <style name="BoldFont.PannelTextStyle">
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="BoldFont.NamePannel">
        <item name="android:gravity">start|bottom</item>
    </style>

    <style name="PhonePannel">
        <item name="fontFamily">@font/tex_gyre_adventor_regular</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:gravity">start|top</item>
        <item name="android:background">@null</item>
    </style>

    <style name="ContactPannel">
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/customborder</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="tint">?attr/colorOnPrimary</item>
    </style>

</resources>